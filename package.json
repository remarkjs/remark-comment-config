{
  "name": "remark-comment-config",
  "version": "6.0.0",
  "description": "remark plugin to configure it with comments",
  "license": "MIT",
  "keywords": [
    "unified",
    "remark",
    "remark-plugin",
    "plugin",
    "mdast",
    "markdown",
    "comment",
    "options",
    "config",
    "settings"
  ],
  "repository": "remarkjs/remark-comment-config",
  "bugs": "https://github.com/remarkjs/remark-comment-config/issues",
  "funding": {
    "type": "opencollective",
    "url": "https://opencollective.com/unified"
  },
  "author": "Titus Wormer <tituswormer@gmail.com> (https://wooorm.com)",
  "contributors": [
    "Titus Wormer <tituswormer@gmail.com> (https://wooorm.com)"
  ],
  "dependencies": {
    "mdast-comment-marker": "^1.0.1"
  },
  "files": [
    "index.js"
  ],
  "devDependencies": {
    "browserify": "^16.0.0",
    "nyc": "^15.0.0",
    "prettier": "^2.0.0",
    "rehype-stringify": "^8.0.0",
    "remark-cli": "^8.0.0",
    "remark-parse": "^9.0.0-alpha.1",
    "remark-preset-wooorm": "^7.0.0",
    "remark-rehype": "^8.0.0",
    "remark-stringify": "^9.0.0-alpha.1",
    "tape": "^5.0.0",
    "tinyify": "^3.0.0",
    "unified": "^9.0.0",
    "xo": "^0.33.0"
  },
  "scripts": {
    "format": "remark . -qfo && prettier . --write && xo --fix",
    "build-bundle": "browserify . -s remarkCommentConfig > remark-comment-config.js",
    "build-mangle": "browserify . -s remarkCommentConfig -p tinyify > remark-comment-config.min.js",
    "build": "npm run build-bundle && npm run build-mangle",
    "test-api": "node test",
    "test-coverage": "nyc --reporter lcov tape test.js",
    "test": "npm run format && npm run build && npm run test-coverage"
  },
  "nyc": {
    "check-coverage": true,
    "lines": 100,
    "functions": 100,
    "branches": 100
  },
  "prettier": {
    "tabWidth": 2,
    "useTabs": false,
    "singleQuote": true,
    "bracketSpacing": false,
    "semi": false,
    "trailingComma": "none"
  },
  "xo": {
    "prettier": true,
    "esnext": false,
    "ignores": [
      "remark-comment-config.js"
    ]
  },
  "remarkConfig": {
    "plugins": [
      "preset-wooorm"
    ]
  }
}
