{
  "name": "remark-comment-config",
  "version": "5.0.3",
  "description": "Configure remark with comments",
  "license": "MIT",
  "keywords": [
    "comment",
    "options",
    "config",
    "settings",
    "remark"
  ],
  "repository": "remarkjs/remark-comment-config",
  "bugs": "https://github.com/remarkjs/remark-comment-config/issues",
  "author": "Titus Wormer <tituswormer@gmail.com> (https://wooorm.com)",
  "contributors": [
    "Titus Wormer <tituswormer@gmail.com> (https://wooorm.com)"
  ],
  "dependencies": {
    "mdast-comment-marker": "^1.0.1"
  },
  "files": [
    "index.js"
  ],
  "devDependencies": {
    "browserify": "^16.0.0",
    "nyc": "^13.0.0",
    "prettier": "^1.14.2",
    "rehype-stringify": "^5.0.0",
    "remark-cli": "^6.0.0",
    "remark-parse": "^6.0.0",
    "remark-preset-wooorm": "^4.0.0",
    "remark-rehype": "^3.0.0",
    "remark-stringify": "^6.0.0",
    "tape": "^4.4.0",
    "tinyify": "^2.4.3",
    "unified": "^7.0.0",
    "xo": "^0.23.0"
  },
  "scripts": {
    "format": "remark . -qfo && prettier --write \"**/*.js\" && xo --fix",
    "build-bundle": "browserify . -s remarkCommentConfig > remark-comment-config.js",
    "build-mangle": "browserify . -s remarkCommentConfig -p tinyify > remark-comment-config.min.js",
    "build": "npm run build-bundle && npm run build-mangle",
    "test-api": "node test",
    "test-coverage": "nyc --reporter lcov tape test.js",
    "test": "npm run format && npm run build && npm run test-coverage"
  },
  "nyc": {
    "check-coverage": true,
    "lines": 100,
    "functions": 100,
    "branches": 100
  },
  "prettier": {
    "tabWidth": 2,
    "useTabs": false,
    "singleQuote": true,
    "bracketSpacing": false,
    "semi": false,
    "trailingComma": "none"
  },
  "xo": {
    "prettier": true,
    "esnext": false,
    "ignores": [
      "remark-comment-config.js"
    ]
  },
  "remarkConfig": {
    "plugins": [
      "preset-wooorm"
    ]
  }
}
